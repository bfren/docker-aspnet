        "9-x64-aspnet" => "b29b4e3163349aff59ad99dac7a07a3b9a8eea153060e5573fe2c6874f8569940723a1f22dd70354b2062ba8ec055860b345ddcb8f45f1082b83a45d0c409f75"
        "10-arm-aspnet" => "6a1646cb04c3d991144f615f16ccaccc80afb5a057f9d96620f9abdb8aaf9170b7319396455b1193a6fbf77538516bab115545e99ae9598e6a5d8ec50f665e5d"
        "10-arm64-aspnet" => "6b1dd57124ec32b29628ecdfac13237ffa4edf2f9f2b04fec3be6a7c58113660e01e54abe2a479d0026ce865f5de53c598cd3284bddcac1c818e8df9bf1d1708"
        "10-x64-aspnet" => "beb542b8c526bde1a8ae2cb2286c09966a52d34289a265698c32600100a8373ab8858a84541a843f8df197960485445c68093eb03bdcb62c2398e29ed78e8751"
        _ => { bf write error $"Unsupported .NET download: ($filename)." }
    }

    # verify downloaded file
    bf write $" .. verifying ($filename) download." install/download
    { $"($hash)  ($filename_with_ext)" | ^sha512sum -c - } | bf handle -f {|code, err|
        bf write error $" .. checksum did not match for ($filename)." install/download
    } install/download

    # return filename with extension
    $filename_with_ext
}
