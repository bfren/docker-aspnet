        "6-x64-dotnet" => "56c2161c52901706fd769d2c9168cff5959576bd1a72d89f7c27858f467f59970624ea9a0559368462bc178e7c9ef7d86d0fda08c7dbdb72dd3e9084280823eb"
        "7-arm-dotnet" => "25ccc373d1c4c0eb741e048c6fd48366310b36ac6f068c50f6bc01342a000464144e8457e7e1b6ccf6d99544d4914022efcb824e75636517bbf61c94852cdd74"
        "7-arm64-dotnet" => "552ca73467f8043d351c20d71df95ba963b32e8c75706df6f5d3fce525f3efdf1314df296c44fbedad5575782e37633998a79b2c23f7f7420f814ee2488f30a2"
        "7-x64-dotnet" => "31b9da08d633cd0028eb08c36ee2c5c3cb1be6d3c5e010c85ae291496fe5e818b5be59f5d47aff86ed939c260f762e57ff06934a4d0954376935b1adc799f1bf"
        "8-arm-dotnet" => "54453e1f46c4ff1b325b57495d47f635f929201d7c8060ba412c448fb2bd101c343064af4c2fdd723a6f80986b01a0ca8efd61c9b4d218a201f4d688e7976509"
        "8-arm64-dotnet" => "58c3b9070cf99ded0ce0f808cacf7b10e15dfd5f874cb09269921e76ff05390c0e621e5320c27012b98e04180d73c80d2063bbbd7d7bab17a099d0feed30ca1f"
        "8-x64-dotnet" => "7277ae5569317987aa74442d6e077fc65a70425eca77f127e2e149d16525ec9f8a8ca0b5acb773ee7dd1ee643204dc979d4451df2f96e455d4822d3612daa582"
        "9-arm-dotnet" => "268ac15ce3c1e3115d40d5e9e5a2f5d8e0c95bee0340fcc7f22639f7191b00516cba095ccc6068f8fcf35c712ce1055926bb675f0fa5cca45bd4ce6893a1bf7f"
        "9-arm64-dotnet" => "c5f63c95e05d251caeecc53476aad36204cc37dadef4eee6c8c40b38e1ab33c150ee923844c28f11cba03a7fdf5f426d88ccf2c11e284c3aaa0ab2380e34ae4c"
        "9-x64-dotnet" => "8b7f6871eaa699f0e849e3d13dae1b3cb3a94d1bd60ed5235eb47000b269b9e4ec1b4fa368de135ade2c1998e2fa101f3da57ae100656783b75c2fabb1dc33f6"
        "10-arm-dotnet" => "dbfe50cd92c35cb4b8df296512b159cde67138b9f3253ef1f13dc46f181859ea4b9753959a96f9a4f0851c0170befa318a50fbe3e28193d185c158aa8059dd26"
        "10-arm64-dotnet" => "42a082dbad2cf97ebe04ad70b542d3ba0e7fde576d137cc63714641fae2dcce4fbefe56a12771c49fcae418d4a73e0479c420f3831169fc9915c199ca32ca400"
        "10-x64-dotnet" => "64d08063d8b3395cf1010c352f033de2c3cde7a5409219e9812b9e7053f5e7e169d88c88690254c39fea721d9a832dcd3c74dd9aff06463078445754bcd9e432"
        "6-arm-aspnet" => "0f772735acac7258c2af4a67c881d5afac2f841f9ab691a06ba1e34abd81d5831d09fe8886e025f7d1fbe84a1e93415fb8e35511c4bb988dd94cb823c18d0078"
