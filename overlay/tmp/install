        "9-x64-aspnet" => "803433a214e36ea076ba6b2ce808c972c0c0218581afc7439021037b7258e3fc901683f0a77a6bff36c0f87ef37821c2787cfdf5cc4b7cee7117952a0a0b8e63"
        "10-arm-aspnet" => "7c16240e845544fc793877e3998716ba39000846d450937065fc3f467df9a6ff5482cebfe28757b71e1e519abf92459ea4816f5549577fa9a4e258ca3ca7e401"
        "10-arm64-aspnet" => "a0a00bd51bbb13d40edde7076df7f04e586d92ead979d89e888177d8d816e6756ac80d9491d74e8a4ced71e425c7530e9ed8d944ec0dfb18bf25ccc21d2ac502"
        "10-x64-aspnet" => "4f18b7fd126212364b7ca68ca3f3f0d63358cc87172fd72fe77de256788d9340814421c16303172248f0c7297b9b96bc0694175c41ef78ce221b7bd02cf94ca4"
        _ => { bf write error $"Unsupported .NET download: ($filename)." }
    }

    # verify downloaded file
    bf write $" .. verifying ($filename) download." install/download
    { $"($hash)  ($filename_with_ext)" | ^sha512sum -c - } | bf handle -f {|code, err|
        bf write error $" .. checksum did not match for ($filename)." install/download
    } install/download

    # return filename with extension
    $filename_with_ext
}
