        "9-arm64-dotnet" => "6a2cbeaad11f369ec8c69a962919be3a16bada829559df7dff9ab10a2318d60df43a14c5a6555f7da8dc15bea3fc3b75fdff68601b5b499a1ca55cbe27b9e9e6"
