        "7-x64-aspnet" => "a80f31193af70d556e8d026d39d79863c8389b065fe0778e7b4360f7d1f6d36503ba52736c40e74a716c3c30500b185816ed60d79b06ae295754b67374a1fa45"
        "8-arm-aspnet" => "31ac234f4c041f3fc45b2eb819f6477d921081a54522848de438159230d161ef427aff4a058245957bbc0d77d6311a7d3bf5f63c5ce3de8c5f37931fb9cbb4b2"
        "8-arm64-aspnet" => "7629c7a8316970a63546b88831dda77650f2a307615df42d735c75e299b935ec1f529f29315e444d16fa498339e3aaf7b961a918ac9efe66debc8ab79e1fb746"
        "8-x64-aspnet" => "74f9dbeb2525d6adbe49ab8e53969860b2f77df39efeb880dd847987ae75832e44b119a2b339828ca151685a3ab5043b7018cc9646ff770e3bc1085c46a4f4ed"
