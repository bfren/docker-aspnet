        "7-x64-aspnet" => "a80f31193af70d556e8d026d39d79863c8389b065fe0778e7b4360f7d1f6d36503ba52736c40e74a716c3c30500b185816ed60d79b06ae295754b67374a1fa45"
        "8-arm-aspnet" => "0c4b16aae3a8ff3ef9d4a5c8dea33b9b0feb4b6c76745841ecda72863ec166f1a6d559e102b7442dffc1ff22c8a55ce7ee3ad7b15f0c75625156bb9318fe9459"
        "8-arm64-aspnet" => "e9ec83100659502c611499f924bfc474c2e6491b518ed69739919c097a799bee7b4a4dd23edb1f0e7868fbce9198e4b1d16545ec5144a55b9820c1665b0dcf87"
        "8-x64-aspnet" => "a3540f89c96853538ee114145ac9991f222be8915b80394191814fdaabef3abc235d605799fa375962c0909af03b3d0bf1ac760342c566140d914f7f706692be"
