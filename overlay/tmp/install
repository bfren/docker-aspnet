        "9-x64-aspnet" => "e43dc8535b32f9fd17b6b81cfbb975be46f09f7793024042e62fe1b499db66eead6db112ca51fefd9a23c676cb6dcb0191c5985c2f53406981f4e15f0b6ef667"
        "10-arm-aspnet" => "b89d1b9ca5a9872cf367774a2ca5152a42ed86decc18c593b104883463ce5cfaca6a69f917449a02b4d25ea4158f822a36ac0d655c538c184e47ad751186ecdb"
        "10-arm64-aspnet" => "7006341c95a51910a6ee02d581e9a41d76464a7efbed0ad779d0e64fc0d77c42bbd233537f57d76f6f0fdb387f6e25592ba53362670a5e6efed61a374e421cec"
        "10-x64-aspnet" => "c117f44821cd6c55a76bb9ebfc7465606d38ac89c810ee224b2b3a0ff4f5abf2dddbbb1956839e672aeba4f951df0b5ac7f1935d2a90b6d4dcddc11ea7c33b51"
        _ => { bf write error $"Unsupported .NET download: ($filename)." }
    }

    # verify downloaded file
    bf write $" .. verifying ($filename) download." install/download
    { $"($hash)  ($filename_with_ext)" | ^sha512sum -c - } | bf handle -f {|code, err|
        bf write error $" .. checksum did not match for ($filename)." install/download
    } install/download

    # return filename with extension
    $filename_with_ext
}
