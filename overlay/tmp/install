        "10-arm64-aspnet" => "0af0b32baf95ac51bc98f96ec766f7d62186442266509cf40316e7184e1ec794386e147223d543340be60fdeae5c3ce29c95b9366647945fcee7aeb15588cf90"
        "10-x64-aspnet" => "0221ad6ed60a88425f527fedb0daf2815cac0feef8ae7fb31f33e5b1bf6f1344444e3d5daa56309d1e9808b2e8ae4288fd80d0dc898ec9f1fd95ab0fc3e83451"
        "11-arm-aspnet" => "a44dce343874b9ce3c7eae4f4d4f7093ef9b0ffdb86269d55d9ca5097445d6f836bbb375a93bc7e4fa0114a1d774bf5493dc6ddf4263758ae7bfb766432829f0"
        "11-arm64-aspnet" => "3022609904012fbb77afffbcd1a0884018169497be1b747c84ba1bd137c0af9526907992a629e9de92dd359d90d26537cd5a477b4cd4b72d565046f0b7cd3422"
        "11-x64-aspnet" => "07ef00589cdedb62713c22964ea6fe71e299db77ce2efae568697f2fe633cb5818dd77eafd4826129d1455e8e2f5bfa8f6aefb71c2a54f10c7af3daafa5a63dc"
        _ => { bf write error $"Unsupported .NET download: ($filename)." }
    }

    # verify downloaded file
    bf write $" .. verifying ($filename) download." install/download
    { $"($hash)  ($filename_with_ext)" | ^sha512sum -c - } | bf handle -f {|code, err|
        bf write error $" .. checksum did not match for ($filename)." install/download
    } install/download

    # return filename with extension
    $filename_with_ext
}
