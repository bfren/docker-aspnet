        "7-x64-aspnet" => "a80f31193af70d556e8d026d39d79863c8389b065fe0778e7b4360f7d1f6d36503ba52736c40e74a716c3c30500b185816ed60d79b06ae295754b67374a1fa45"
        "8-arm-aspnet" => "5195633f1824d86417da17dcf801c35d3c1871c5939f53868e449d6f7f5521c7a5bc4d93462ae1619c82b9202715ab887167578b87fb5cc91f4a40366cfdb1a5"
        "8-arm64-aspnet" => "527163f7eac703d08d8931739877c47799d0b27bd3e508b0931518b18aef9930eae18c697c7fde4b4319c65602ab7d9e6733ff86f3e51b1059f42f57f80c2688"
        "8-x64-aspnet" => "0560340e7bc75a276d6df79da9f01385a6a14527d8559fadae99f6704b76e2649ce05364949fc461759fa33a98f58c8da5e8e251e4b93cf60f169db15e29ea7c"
