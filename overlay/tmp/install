        "7-x64-aspnet" => "a80f31193af70d556e8d026d39d79863c8389b065fe0778e7b4360f7d1f6d36503ba52736c40e74a716c3c30500b185816ed60d79b06ae295754b67374a1fa45"
        "8-arm-aspnet" => "7ce63c0a80420c1ed3fb2958cb4a23d74ff25efcef0a678ff771f82c3539c9283fd6dc55403a0ab4c95cba2806a76e0c8d7864bebe98d8914fefbdeef9704926"
        "8-arm64-aspnet" => "4c656e8ab04882f74c91f7931174f083b26ed90478bcfc90984b1783d4fca6beb1d021ec04469fae610ebb02df73fbfa58af3df1e8d52cbf5e068cbf34188d21"
        "8-x64-aspnet" => "ed899d524bb9a24d0c3cafded6d0f46ec620857f3d8b43aaf089fe8606fa86c25e85d92c5fee9a016d41a75dd76c303e2edc2d3393c0eb4dc386c5ae3634c22f"
        "9-arm-aspnet" => "44d0fa0d36f9cff993f7089efd3b2b3e0e60d403bc2b5a395116be7d6b43a82471e2abb44cd1702464ad302337bc3e0ce49e242f02fa14a114288f0f8a662296"
