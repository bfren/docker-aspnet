        "7-arm64-aspnet" => "65406e1714a3117daa342b3fd0dbcd5c3214315611eacbbd8580827f69a07a9480530320ba40692a3d6dbff832d929a1420079f1db30ca3fd67a6fd035149d04"
        "7-x64-aspnet" => "a80f31193af70d556e8d026d39d79863c8389b065fe0778e7b4360f7d1f6d36503ba52736c40e74a716c3c30500b185816ed60d79b06ae295754b67374a1fa45"
        "8-arm-aspnet" => "e3b9477b529f2ffec127100dea801e2d83b033f096c83db9a6f009ef0e68a3093e2fa1dbc258b0c288aaa610ba1789e381158e16f6a67f13639efdce47bcd049"
        "8-arm64-aspnet" => "0aa1a50f89aa39c4511e36e4acc835319fab95086bb8ec8125d5bdb51bd2087ca1843dddf8075fe5efb09dd3b8d6340615085c1ecaa2107bebc0a82e4f3ad9fd"
        "8-x64-aspnet" => "25290ca375dbd57ff70e11aac6b191c5442ac462dc94244abeafd6ed7a7388e0e342f8dff60b741aa52e335c16f0ca12cfa3426348eae906aa5f45b0b6b36b5c"
