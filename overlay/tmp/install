        "9-x64-aspnet" => "ad90430b8fc49e5f0354af893e155deb3e7d9e650a08a81125956e55cdf8821408d4e9d602ae6d27b25df8705ed2a4ca8250da9086b1d3270ab5f7d0990e5497"
        "10-arm-aspnet" => "0068163e30747a33f91152ed862f28912ff803daf12bd915a52feb2ffd06a8b153c0c89d9db965674a11ffd72df2b13cba29124c2a9790bde38d60de971acd7a"
        "10-arm64-aspnet" => "d30e26528ca93f3527f3535db83e1e19acf12d78708f4b22f5ce297534b47d8307a9e346a5882aaf159fa73b804cdf71f5c59e2ed3948cabaed5c737910afb35"
        "10-x64-aspnet" => "86cfff7410151dc88427d0b9c795194e79d813961af92a02604dd47a73c87a62ccb6cbdfd66efcdb8a1096ee7d1538c535f8016d767a19bcf78ccdbabecf17e0"
        _ => { bf write error $"Unsupported .NET download: ($filename)." }
    }

    # verify downloaded file
    bf write $" .. verifying ($filename) download." install/download
    { $"($hash)  ($filename_with_ext)" | ^sha512sum -c - } | bf handle -f {|code, err|
        bf write error $" .. checksum did not match for ($filename)." install/download
    } install/download

    # return filename with extension
    $filename_with_ext
}
