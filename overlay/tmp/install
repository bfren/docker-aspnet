        "9-x64-aspnet" => "db67082a6bd12d268dfb393dac12df316268e52401066e46aed21adcc55a69d3102d57a0930bd5b0e5a20e5abcf64d49eca99518b2ac912d779a0047d36c45be"
        "10-arm-aspnet" => "789ec6dcb6805ed709f03facd19e2cf04faeb88408e2436bc7e7e76eb65f273402f4714cee60c6b08fd9b59138bff43b805965d1d5c5ba585beae71e5ffb8b4d"
        "10-arm64-aspnet" => "b06d62a7c5300c4a7fc795438180e27c127e971578f8f874c8c6d733be2b645efb59b633d88f6658ca34dbcbc8b689675cb3651a612598204fc2a5bae41d361d"
        "10-x64-aspnet" => "c998983db2cd5e8ba3703900873929d93f0ff8c6a51b465a27035972ba77f0c19a72d3cb8542ddb32fecd1e76ba3971627391a2e00f5a9fe1df7ce648392d317"
        _ => { bf write error $"Unsupported .NET download: ($filename)." }
    }

    # verify downloaded file
    bf write $" .. verifying ($filename) download." install/download
    { $"($hash)  ($filename_with_ext)" | ^sha512sum -c - } | bf handle -f {|code, err|
        bf write error $" .. checksum did not match for ($filename)." install/download
    } install/download

    # return filename with extension
    $filename_with_ext
}
